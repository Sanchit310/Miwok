<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fffaec"
        tools:context=".MainActivity">
    <TextView
            android:text="@string/number"
            android:layout_width="0dp"
            android:layout_height="@dimen/layout_height"
            android:id="@+id/textView1" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:onClick="numberActivity"
            app:layout_constraintTop_toTopOf="parent" android:background="@color/text1"
            android:paddingBottom="@dimen/padding_bottom"
            android:paddingTop="@dimen/padding_top"
            android:paddingStart="@dimen/padding_left" android:paddingEnd="@dimen/padding_right"/>
    <TextView
            android:text="@string/family"
            android:layout_width="0dp"
            android:layout_height="@dimen/layout_height"
            android:id="@+id/textView2" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:onClick="familyActivity"
            app:layout_constraintTop_toBottomOf="@+id/textView1" android:background="@color/text2"
            android:paddingBottom="@dimen/padding_bottom" android:paddingEnd="@dimen/padding_right"
            android:paddingTop="@dimen/padding_top" android:paddingStart="@dimen/padding_left"/>
    <TextView
            android:text="@string/color"
            android:layout_width="0dp"
            android:layout_height="@dimen/layout_height"
            android:id="@+id/textView3" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:onClick="colorActivity"
            app:layout_constraintTop_toBottomOf="@+id/textView2" android:background="@color/text3"
            android:paddingStart="@dimen/padding_left" android:paddingEnd="@dimen/padding_right"
            android:paddingBottom="@dimen/padding_bottom" android:paddingTop="@dimen/padding_top"/>
    <TextView
            android:text="@string/phrases"
            android:layout_width="0dp"
            android:layout_height="@dimen/layout_height"
            android:id="@+id/textView4" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:onClick="phraseActivity"
            app:layout_constraintTop_toBottomOf="@+id/textView3" android:background="@color/text4"
            android:paddingStart="@dimen/padding_left" android:paddingEnd="@dimen/padding_right"
            android:paddingBottom="@dimen/padding_bottom" android:paddingTop="@dimen/padding_top"/>
</android.support.constraint.ConstraintLayout>